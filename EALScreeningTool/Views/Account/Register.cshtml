@using EALScreeningTool.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="account-title">Administrators</h1>
<hr />

<div class="card">
    <div class="card-block">
        <h4 class="card-title">Register a New Account</h4>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(user => user.Email)
                @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(user => user.Email, null, new { @class = "text-danger form-text" })
            </div>

            <div class="form-group">
                @Html.LabelFor(user => user.UserName)
                @Html.TextBoxFor(user => user.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(user => user.UserName, null, new { @class = "text-danger form-text" })
            </div>

            <div class="form-group">
                @Html.LabelFor(user => user.Password)
                @Html.PasswordFor(user => user.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(user => user.Password, null, new { @class = "text-danger form-text" })
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.ConfirmPassword)
                @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(user => user.ConfirmPassword, null, new { @class = "text-danger form-text" })
            </div>

            <input type="submit" value="Register" class="btn" />
        }

        <p><a asp-controller="Account" asp-action="/">Log In</a></p>
    </div>
</div>

