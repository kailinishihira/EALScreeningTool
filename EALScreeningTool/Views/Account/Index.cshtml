@{
    ViewData["Title"] = "Index";
}

@using System.Security.Claims
@using EALScreeningTool.ViewModels
@model LoginViewModel

<h1 class="account-title">Administrators</h1>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <p>You are logged in under @User.Identity.Name.</p>
}

else
{
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Log In</h4>

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger form-text" })
                </div>

                <div class="form-group">
                    <label>Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger form-text" })
                </div>

                <input type="submit" value="Log in" class="btn btn-default" />
            }

            <p><a asp-controller="Account" asp-action="Register">Sign Up</a></p>            
        </div>
    </div>

             



            }